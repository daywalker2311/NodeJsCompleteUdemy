doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/product.css")
    body 
        header.main_header 
            nav.main_header__nav 
                ul.main_header__item_list 
                    li.main_header__item 
                        a.active(href="/") Shop 
                    li.main_header__item 
                        a.active(href="/admin/add-product") Add Product
        
        main.grid 
            each product in prods 
                article.card.product-item 
                    header.car__header 
                        h1.product__title #{product.title}
                    .card__image 
                        img(src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fpngimg.com%2Fimage%2F2111&psig=AOvVaw1D-U3Af_lgX_mlMx0Kizjf&ust=1636477743299000&source=images&cd=vfe&ved=0CAsQjRxqFwoTCLC5vPCgifQCFQAAAAAdAAAAABAP", alt="a book here")
                    .card__content 
                        h2.product__price $19.99
                        p.product__description A very interesting libro so you should read it 
                    .card__actions 
                        button.btn Add to cart